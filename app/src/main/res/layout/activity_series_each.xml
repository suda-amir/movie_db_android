<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:label="Entertainment Search"
    tools:context=".seriesEachActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_img"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_gravity="center_vertical|left"
        android:gravity="center_vertical|left"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heading"
        android:text="Sample Text"
        android:textStyle="bold"
        android:textSize="30dp"
        android:paddingTop="10dp"
        android:layout_toRightOf="@id/main_img"
        android:gravity="center_vertical|right"
        android:layout_gravity="center_vertical|right"
        android:paddingLeft="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rating 8.1 / 10"
        android:textStyle="italic|bold"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:id="@+id/rating"
        android:layout_below="@+id/main_img"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sample"
        android:textStyle="italic"
        android:textSize="15dp"
        android:id="@+id/released"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/rating"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sample"
        android:textStyle="italic"
        android:textSize="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/cast"
        android:layout_below="@+id/released"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sample"
        android:textStyle="italic"
        android:textSize="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/directors"
        android:layout_below="@+id/cast"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sample"
        android:textStyle="italic"
        android:textSize="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/writers"
        android:layout_below="@+id/directors"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sample"
        android:textStyle="italic"
        android:textSize="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/genre"
        android:layout_below="@+id/writers"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/genre"
        android:layout_gravity="right"
        android:paddingTop="25dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Sample Content"
        android:textAppearance="@android:style/TextAppearance.Material.Body1" />

   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="View all Seasons and its Episodes"
       android:layout_below="@+id/content"
       android:padding="15dp"
       android:onClick="all_disp"
       android:id="@+id/all_disp"/>

</RelativeLayout>